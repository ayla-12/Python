name = "연탄이"
animal = "강아지"
age = 4
hobby = "산책"
is_adult = age >= 3

print("우리집 " + animal + "의 이름은 " + name + "예요")
hobby = "공놀이"
#print(name + "는 " + str(age) + "살이며, " + hobby + "을 아주 좋아해요")
print(name, "는 ", age, "살이며, ", hobby, "을 아주 좋아해요")
print(name + "는 어른일까요? " + str(is_adult))

#변수에 자료형 설정을 안해줘도 됨
# + 로 변수를 이을 때에는 문자열 자료형이 아니면 str()를 통해 문자열 자료형으로 바꾸어주어야함
# , 을 이용하면 바꾸어주지 않아도 되지만, 띄어쓰기가 필수적으로 들어감
